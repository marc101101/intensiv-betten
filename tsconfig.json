{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": ".webpack",
        "lib": [
            "es2015"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
  }